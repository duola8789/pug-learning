doctype html
head
	meta(charset="UTF-8")
	title 商品详情图
	//TODO: 替换变量
	- var URL_PREFIX = '../git'
	- var __resourceBaseUrl__ = './资源库';
	- var __testUrl__ = './测试库';
	- var introName = '超软小鸡萌萌哒';
	- var introContent = '简介简介简介一堆文字，简介简介简介一堆文字，简介简介简介一堆文字。简介简介简介一堆文字，简介简介简介一堆文字，简介简介简介一堆文字。';
	- var wordIntroTitle = '超软小鸡萌萌哒';
	- var wordIntroText = '尺寸：21x13\n款式：三种表情随机发\n其他：七个工作日发货';
	style.
		html,
		body,
		.container * {
			margin: 0;
			padding: 0;
			box-sizing: border-box;
		}
		@font-face {
			font-family: pf-regular;
			src: url('#{URL_PREFIX}/assets/remote/公共资源/Fonts/PingFang-SC-Regular.otf')
		}
		@font-face {
			font-family: pf-bold;
			src: url('#{URL_PREFIX}/assets/remote/公共资源/Fonts/PingFang-SC-Semibold.ttf')
		}
		@font-face {
			font-family: fzdb;
			src: url('#{URL_PREFIX}/assets/remote/公共资源/Fonts/FZDBSJW.ttf')
		}
		@font-face {
			font-family: fzse;
			src: url('../git/assets/remote/公共资源/Fonts/方正少儿_GBK.ttf')
		}
		.image {
			width: 100%
		}
		.container {
			width: 710px;
			padding: 40px 0 0;
			font-family: pf-regular, sans-serif;
			background: #FFFFFF;
			overflow: hidden;
		}
		.intro {
			width: 564px;
			margin: 0 auto;
			padding: 118px 0 35px;
			background: url('#{__resourceBaseUrl__}/type3-intro-bg1.png') no-repeat center 35px;
			border: 3px solid #e6a4ad;
			text-align: center;
		}
		.intro .image {
			width: 428px;
		}
		.intro .name {
			margin: 20px auto 0;
			text-align: center;
			font-family: fzse, sans-serif;
			font-size: 34px;
			color: #000;
		}
		.intro .content {
			width: 470px;
			margin: 20px auto 0;
			text-align: center;
			font-family: pf-regular, sans-serif;
			font-size: 26px;
			line-height: 37px;
			color: #666;
		}
		.word-intro {
			font-size: 0;
			margin: 70px 0;
		}
		.word-intro .image {
			width: 318px;
			margin-left: 18px;
			vertical-align: middle;
		}
		.word-content {
			display: inline-block;
			width: 314px;
			margin-left: 25px;
			font-size: 26px;
			vertical-align: middle;
			color: #333;
		}
		.word-content-title {
			font-family: fzse, sans-serif;
			font-size: 38px;
			margin-bottom: 22px;
		}
		.word-content-text {
			font-family: pf-bold, sans-serif;
			font-size: 28px;
			line-height: 47px;
		}
		.big-pic-item:nth-child(2n+1) {
			position: relative;
			width: 100%;
			height: 539px;
			padding-top: 30px;
			background: url('#{__resourceBaseUrl__}/type3-bigPic-bg1.png') no-repeat center center;
		}
		.big-pic-item:nth-child(2n+1) .image-container {
			margin: 0 auto;
			width: 650px;
			height: 470px;
			border-radius: 10px;
			overflow: hidden;
		}
		.big-pic-item:nth-child(2n) {
			margin: 56px 0;
		}
		.big-pic-item:nth-child(2n) .image-container {
			margin: 0 auto;
			width: 650px;
		}
		.big-pic-item .image {
			border-radius: 10px;
		}
		.big-pic-bg-container {
			position: absolute;
			right: 90px;
			bottom: 0;
			display: block;
			width: 122px;
			height: 208px;
			background: url('#{__resourceBaseUrl__}/type3-bigPic-bg2.png') no-repeat center center;;
		}
		.detail {
			width: 100%;
		}
		.detail-title {
			width: 377px;
			height: 100px;
			margin: 0 auto 46px;
			padding-top: 10px;
			background: url('#{__resourceBaseUrl__}/type3-detail-bg1.png') no-repeat right center;
			font-family: fzse, sans-serif;
			font-size: 40px;
			color: #333;
			text-align: center;
		}
		.detail-text {
			font-family: fzse, sans-serif;
			font-size: 34px;
			color: #333;
		}
		.detail-text:before {
			display: inline-block;
			content: '';
			width: 26px;
			height: 26px;
			margin-right: 20px;
			border-radius: 50%;
			background: #ffb0bd;
		}
		.detail-item1 {
			position: relative;
			width: 100%;
			height: 580px;
			overflow: hidden;
		}
		.detail-item1 .detail-bg-container {
			position: absolute;
			left: 0;
			top: 0;
			width: 100%;
			height: 100%;
			background: url('#{__resourceBaseUrl__}/type3-detail-bg2.png') no-repeat center center;
			z-index: 2;
		}
		.detail-item1 .clipper {
			width: 450px;
			height: 550px;
			position: absolute;
			left: 35px;
			top: 18px;
			overflow: hidden;
		}
		.detail-item1 .image {
			position: absolute;
			left: 0;
			top: 0;
			z-index: 1;
		}
		.detail-item1 .detail-text {
			position: absolute;
			top: 250px;
			left: 510px;
			z-index: 2;
		}
		.detail-item2 {
			margin: 40px 0 40px;
		}
		.detail-item2 .detail-image-container {
			width: 532px;
			margin-left: 148px;
			padding-right: 14px;
			padding-bottom: 18px;
			border-radius: 10px;
			background: #ffb0bd;
			font-size: 0;
		}
		.detail-item2 .image {
			border-radius: 10px;
		}
		.detail-item2 .detail-text {
			margin: 26px 0 0 148px;
		}
		.detail-item3 {
			position: relative;
			width: 100%;
			height: 510px;
			margin-bottom: 50px;
			overflow: hidden;
		}
		.detail-item3 .detail-bg-container {
			position: absolute;
			left: 0;
			top: 0;
			width: 100%;
			height: 100%;
			background: url('#{__resourceBaseUrl__}/type3-detail-bg3.png') no-repeat center center;
			z-index: 2;
		}
		.detail-item3 .clipper {
			width: 525px;
			height: 430px;
			position: absolute;
			left: 26px;
			top: 10px;
			overflow: hidden;
		}
		.detail-item3 .image {
			position: absolute;
			left: 0;
			top: 0;
			z-index: 1;
		}
		.detail-item3 .detail-text {
			position: absolute;
			top: 470px;
			left: 25px;
			z-index: 2;
		}
		.footer {
			width: 100%;
			height: 130px;
			background: url('#{__resourceBaseUrl__}/type3-footer-bg1.png') no-repeat center top;
			overflow: hidden;
		}
		.footer-text {
			margin-top: 62px;
			font-family: fzdb, sans-serif;
			font-size: 26px;
			color: #ffb0bd;
			text-align: center;
		}
body
	div.container
		div.intro
			img.image(src=__testUrl__ + "./test5.png" alt="商品配图")
			p.name #{introName}
			p.content #{introContent}
		div.word-intro
			img.image(src=__testUrl__ + "/test6.png" alt="文字描述配图")
			div.word-content
				p.word-content-title #{wordIntroTitle}
				each text in (wordIntroText || '').split(/\n+/)
					p.word-content-text  #{text}
		div.big-pic
			div.big-pic-item
				div.image-container
					img.image(src=__testUrl__ + "/test3.png" alt="文字描述配图")
				i.big-pic-bg-container
			div.big-pic-item
				div.image-container
					img.image(src=__testUrl__ + "/test8.png" alt="文字描述配图")

		div.detail
			p.detail-title 产品细节
			div.detail-item1
				div.detail-bg-container
				div.clipper
					img.image(src=__testUrl__ + "/test4.jpg" alt="文字描述配图")
				p.detail-text 正版玩偶
			div.detail-item2
				div.detail-image-container
					img.image(src=__testUrl__ + "/test6.png" alt="文字描述配图")
				p.detail-text 精致礼盒
			div.detail-item3
				div.detail-bg-container
				div.clipper
					img.image(src=__testUrl__ + "/test6.png" alt="文字描述配图")
				p.detail-text 精致做工
		div.footer
			p.footer-text 祝你好运~
